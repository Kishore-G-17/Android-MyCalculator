<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:textAlignment="center"
        android:id="@+id/textView"
        android:text=""
        android:textSize="50dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grid_layout"
        android:columnCount="4"
        android:layout_below="@+id/textView"
        >

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/one"
            android:tag="1"
            android:onClick="clickedObject"
            android:padding="10dp"
            android:text="1"
            android:layout_margin="5dp"
            android:textSize="50dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:tag="2"
            android:onClick="clickedObject"
            android:id="@+id/two"
            android:layout_margin="5dp"
            android:text="2"
            android:textSize="50dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:tag="3"
            android:onClick="clickedObject"
            android:id="@+id/three"
            android:layout_margin="5dp"
            android:text="3"
            android:textSize="50dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:tag="+"
            android:onClick="clickedObject"
            android:id="@+id/add"
            android:layout_margin="5dp"
            android:text="+"
            android:textSize="50dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:tag="4"
            android:onClick="clickedObject"
            android:id="@+id/four"
            android:layout_margin="5dp"
            android:text="4"
            android:textSize="50dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:tag="5"
            android:onClick="clickedObject"
            android:id="@+id/five"
            android:layout_margin="5dp"
            android:text="5"
            android:textSize="50dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:tag="6"
            android:onClick="clickedObject"
            android:id="@+id/six"
            android:layout_margin="5dp"
            android:text="6"
            android:textSize="50dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:tag="-"
            android:onClick="clickedObject"
            android:id="@+id/sub"
            android:layout_margin="5dp"
            android:text="-"
            android:textSize="50dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:tag="7"
            android:onClick="clickedObject"
            android:id="@+id/seven"
            android:layout_margin="5dp"
            android:text="7"
            android:textSize="50dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:tag="8"
            android:onClick="clickedObject"
            android:id="@+id/eight"
            android:layout_margin="5dp"
            android:text="8"
            android:textSize="50dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:tag="9"
            android:onClick="clickedObject"
            android:id="@+id/nine"
            android:layout_margin="5dp"
            android:text="9"
            android:textSize="50dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:tag="x"
            android:onClick="clickedObject"
            android:id="@+id/mul"
            android:layout_margin="5dp"
            android:text="x"
            android:textSize="50dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:tag="0"
            android:onClick="clickedObject"
            android:id="@+id/zero"
            android:layout_margin="5dp"
            android:text="0"
            android:textSize="50dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:tag="/"
            android:onClick="clickedObject"
            android:id="@+id/div"
            android:layout_margin="5dp"
            android:text="/"
            android:textSize="50dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:tag="%"
            android:onClick="clickedObject"
            android:id="@+id/mod"
            android:layout_margin="5dp"
            android:text="%"
            android:textSize="50dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:tag="="
            android:onClick="clickedObject"
            android:id="@+id/equal"
            android:layout_margin="5dp"
            android:text="="
            android:textSize="50dp"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:tag="C"
            android:onClick="clickedObject"
            android:id="@+id/clean"
            android:layout_margin="5dp"
            android:text="c"
            android:textSize="50dp"/>

    </GridLayout>

</RelativeLayout>